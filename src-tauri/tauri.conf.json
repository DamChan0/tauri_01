{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "idlegui-tauri",
  "version": "0.1.0",
  "identifier": "com.damchan.idlegui-tauri",
  "build": {
    "beforeDevCommand": "vite",            
    "devUrl": "http://localhost:1420",    
    "beforeBuildCommand": "vite build",    
    "frontendDist": "../dist"              
  },
  "app": {
    "windows": [
      { "title": "UI Mini Lab", "width": 900, "height": 700 }
    ],
    "security": { "csp": null }            
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
